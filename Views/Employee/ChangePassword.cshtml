@using Microsoft.AspNetCore.Mvc.TagHelpers
@model NoSQL_Project.ViewModels.Employee.PasswordChangeViewModel

@{
    ViewData["Title"] = "Change Password";
}

<div class="container-fluid py-3">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold mb-0 text-primary">
            <i class="bi bi-person-lock me-2"></i> Change Password
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <!-- Validation summary -->
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    <div class="card shadow-sm">
        <div class="card-body">


                <!-- Employee meta -->
                <div class="d-flex justify-content-end">
                    <div class="me-auto">
                    <span>Changing password for employee: <strong> @Model?.Name</strong></span>
                    </div>
                    <div>
                    <small class="text-muted">ID: @Model?.Id</small>
                    </div>
                </div>

                <hr class="mt-0" />
            <form asp-action="ChangePassword" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()


                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Name" />

                <!-- Password fields -->
                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="NewPassword" class="form-label">New password</label>
                            <input asp-for="NewPassword" class="form-control" type="password" autocomplete="new-password" required />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ConfirmNewPassword" class="form-label">Confirm new password</label>
                            <input asp-for="ConfirmNewPassword" class="form-control" type="password" autocomplete="new-password" required />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>
                </div>


                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@model NoSQL_Project.Models.Employee
@using NoSQL_Project.Models.Enums
@{
    ViewData["Title"] = "Edit user";
}
<h2>Edit user</h2>
<hr />

<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="EmployeeId" />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Name.FirstName" class="form-label"></label>
            <input asp-for="Name.FirstName" class="form-control" />
            <span asp-validation-for="Name.FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Name.LastName" class="form-label"></label>
            <input asp-for="Name.LastName" class="form-control" />
            <span asp-validation-for="Name.LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="ContactInfo.Email" class="form-label"></label>
        <input asp-for="ContactInfo.Email" class="form-control" />
        <span asp-validation-for="ContactInfo.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ContactInfo.Phone" class="form-label"></label>
        <input asp-for="ContactInfo.Phone" class="form-control" />
        <span asp-validation-for="ContactInfo.Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ContactInfo.Location" class="form-label"></label>
        <input asp-for="ContactInfo.Location" class="form-control" />
        <span asp-validation-for="ContactInfo.Location" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label"></label>
        <select asp-for="Role" class="form-select" asp-items="Html.GetEnumSelectList<RoleType>()"></select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

@model NoSQL_Project.ViewModels.Employee.EmployeeCreateViewModel
@using NoSQL_Project.Models.Enums

@{
    ViewData["Title"] = "Create Employee";
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold mb-0 text-primary">
            <i class="bi bi-person-plus-fill me-2"></i> Create Employee
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <div class="col-12">
                        <div class="alert alert-info py-2 mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            Please fill in the employee details below.
                        </div>
                    </div>

                    @* Validation summary *@
                    <div class="col-12">
                        <div class="text-danger">
                            <div asp-validation-summary="ModelOnly"></div>
                        </div>
                    </div>
                </div>

                <!-- Name -->
                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Name.FirstName" class="form-control" placeholder="First name" />
                            <label asp-for="Name.FirstName">First name</label>
                            <span asp-validation-for="Name.FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Name.LastName" class="form-control" placeholder="Last name" />
                            <label asp-for="Name.LastName">Last name</label>
                            <span asp-validation-for="Name.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Contact Info -->
                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="ContactInfo.Email" type="email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="ContactInfo.Email">Email</label>
                            <span asp-validation-for="ContactInfo.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-floating">
                            <input asp-for="ContactInfo.Phone" class="form-control" placeholder="Phone" />
                            <label asp-for="ContactInfo.Phone">Phone</label>
                            <span asp-validation-for="ContactInfo.Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-floating">
                            <input asp-for="ContactInfo.Location" class="form-control" placeholder="Location" />
                            <label asp-for="ContactInfo.Location">Location</label>
                            <span asp-validation-for="ContactInfo.Location" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Role + Disabled -->
                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="Role"
                                    class="form-select"
                                    asp-items="Html.GetEnumSelectList<RoleType>()">
                                <option value="">-- Select role --</option>
                            </select>
                            <label asp-for="Role">Role</label>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 d-flex align-items-center">
                        <div class="form-check form-switch ms-1">
                            <input asp-for="IsDisabled" class="form-check-input" type="checkbox" role="switch" />
                            <label class="form-check-label" asp-for="IsDisabled">Disabled</label>
                        </div>
                        <span class="text-danger ms-3" asp-validation-for="IsDisabled"></span>
                    </div>
                </div>

                <!-- Password -->
                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" autocomplete="new-password" />
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check2-circle me-1"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

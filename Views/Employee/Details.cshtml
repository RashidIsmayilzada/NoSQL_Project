@model NoSQL_Project.Models.Employee
@{
    ViewData["Title"] = "Employee details";
}
<h2>Employee details</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@($"{Model.Name?.FirstName} {Model.Name?.LastName}")</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.ContactInfo?.Email</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.ContactInfo?.Phone</dd>

    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.ContactInfo?.Location</dd>

    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.Role</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>

@model NoSQL_Project.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold mb-0 text-primary">
            <i class="bi bi-person-badge-fill me-2"></i> Employee Details
        </h2>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i> Edit
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <div class="fw-semibold d-flex align-items-center gap-2">
                @Model?.Name?.FirstName @Model?.Name?.LastName
                <span class="badge @(Model.Role.ToString()=="ServiceDesk" ? "bg-primary" : "bg-secondary")">
                    @Model.Role
                </span>
                @if (Model.IsDisabled)
                {
                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle">
                        Disabled
                    </span>
                }
            </div>
            <small class="text-muted">ID: @Model.Id</small>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table align-middle mb-0 text-break">
                    <tbody>
                        <tr>
                            <th class="w-25 text-muted">First Name</th>
                            <td>@Model?.Name?.FirstName</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Last Name</th>
                            <td>@Model?.Name?.LastName</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Email</th>
                            <td>@Model?.ContactInfo?.Email</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Phone</th>
                            <td>@Model?.ContactInfo?.Phone</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Location</th>
                            <td>@Model?.ContactInfo?.Location</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Role</th>
                            <td>
                                <span class="badge @(Model.Role.ToString()=="ServiceDesk" ? "bg-primary" : "bg-secondary")">
                                    @Model.Role
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <th class="text-muted">Status</th>
                            <td>
                                @if (Model.IsDisabled)
                                {
                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle">Disabled</span>
                                }
                                else
                                {
                                    <span class="badge bg-success-subtle text-success border border-success-subtle">Active</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th class="text-muted">Reported Tickets</th>
                            <td>
                                <span class="badge bg-info text-dark">@((Model.ReportedTickets?.Count() ?? 0))</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i> Edit
            </a>
        </div>
    </div>
</div>

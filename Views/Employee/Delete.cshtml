@model NoSQL_Project.Models.Employee
@{
    ViewData["Title"] = "Delete employee";
}
<h2>Delete employee</h2>
<hr />
<p>Are you sure you want to delete <strong>@($"{Model.Name?.FirstName} {Model.Name?.LastName}")</strong>?</p>
<dl class="row">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.ContactInfo?.Email</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Welcome to the Incident Management System</h1>
        <p class="text-muted">Monitor and manage IT incidents efficiently</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Tickets</h5>
                    <p class="text-muted">View, create, update and delete tickets.</p>
                    <a asp-controller="Ticket" asp-action="Index" class="btn btn-outline-primary">View Tickets</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Employees</h5>
                    <p class="text-muted">Manage employee records and roles.</p>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-success">View Employees</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Dashboard</h5>
                    <p class="text-muted">See live ticket status and insights.</p>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-warning">Open Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>

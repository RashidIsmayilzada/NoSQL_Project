@using System.Security.Claims
@using NoSQL_Project.Models.Enums
@{
    Layout = null;
}

@functions {
    // Returns "active" when the current route matches the link
    public string IsActive(string controller, string action = null)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

        if (action == null)
            return string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase)
                ? "active bg-primary text-white fw-semibold"
                : "text-white";

        return (string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase)
            && string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase))
            ? "active bg-primary text-white fw-semibold"
            : "text-white";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoSQL_Project</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NoSQL_Project.styles.css" asp-append-version="true" />

    <!-- Load chart libs early so ViewComponents can use them -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body class="bg-light">
    @{
        bool isAuthenticated = User?.Identity?.IsAuthenticated == true;
        string? displayName = null;
        if (isAuthenticated)
        {
            displayName = User.Identity?.Name
            ?? User.FindFirst(ClaimTypes.Email)?.Value
            ?? User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        }
        bool isServiceDesk = isAuthenticated && User.IsInRole(nameof(RoleType.ServiceDesk));
    }

    @if (isAuthenticated && !string.IsNullOrEmpty(displayName))
    {
        <!-- Mobile Navbar -->
        <nav class="navbar navbar-dark bg-dark d-md-none px-2 rounded m-2 shadow-sm fs-5">
            <div class="container-fluid">
                <a class="navbar-brand mx-auto fw-semibold text-white d-flex align-items-center gap-2 fs-4">
                    <i class="bi bi-building-gear fs-3"></i> The Garden Group
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mobileNav"
                        aria-controls="mobileNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse" id="mobileNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-3 @IsActive("Home", "Index")"
                           asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door fs-4"></i> Home
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-3 @IsActive("Dashboard", "Index")"
                           asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-speedometer2 fs-4"></i> Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-3 @IsActive("Ticket","Index")"
                           asp-controller="Ticket" asp-action="Index">
                            <i class="bi bi-ticket-detailed fs-4"></i> My Tickets
                        </a>
                    </li>

                    @if (isServiceDesk)
                    {
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-3 @IsActive("Ticket","Index")"
                               asp-controller="Ticket" asp-action="Index">
                                <i class="bi bi-collection fs-4"></i> All Tickets
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-3 @IsActive("Employee","Index")"
                               asp-controller="Employee" asp-action="Index">
                                <i class="bi bi-people fs-4"></i> Employees
                            </a>
                        </li>
                    }

                    <li><hr class="dropdown-divider"></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white dropdown-toggle d-flex align-items-center gap-3" href="#"
                           id="mobileUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle fs-4"></i> <strong>@displayName</strong>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="mobileUser">
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Login" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Log Out
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Desktop Sidebar -->
        <div class="d-none d-md-flex flex-column flex-shrink-0 p-3 text-white bg-dark m-2 rounded-3 shadow-sm fs-5" style="width: 300px;">
            <h1 class="fs-4 text-center mb-1 d-flex justify-content-center align-items-center gap-2">
                <i class="bi bi-building-gear fs-3"></i> The Garden Group
            </h1>
            <p class="text-center mb-3 fs-6">Incident Management System</p>
            <hr class="border-secondary">

            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-3 @IsActive("Home", "Index")"
                       asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door fs-4"></i> Home
                    </a>
                </li>

                <li>
                    <a class="nav-link d-flex align-items-center gap-3 @IsActive("Dashboard", "Index")"
                       asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2 fs-4"></i> Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-3 @IsActive("Ticket","Index")"
                       asp-controller="Ticket" asp-action="Index">
                        <i class="bi bi-ticket-detailed fs-4"></i> My Tickets
                    </a>
                </li>

                @if (isServiceDesk)
                {
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-3 @IsActive("Ticket","Index")"
                           asp-controller="Ticket" asp-action="Index">
                            <i class="bi bi-collection fs-4"></i> All Tickets
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-3 @IsActive("Employee","Index")"
                           asp-controller="Employee" asp-action="Index">
                            <i class="bi bi-people fs-4"></i> Employees
                        </a>
                    </li>
                }
            </ul>

            <hr class="border-secondary">
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle fs-5"
                   id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-circle fs-4 me-2"></i> <strong>@displayName</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                    <li>
                        <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Login" asp-action="Logout">
                            <i class="bi bi-box-arrow-right"></i> Log Out
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    }

    <div class="container p-0">
        <main role="main" class="w-100 fs-5">
            @await Html.PartialAsync("_Alerts")
            @RenderBody()
        </main>
    </div>

    <!-- Scripts at the end -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

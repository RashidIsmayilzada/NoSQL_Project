@using Microsoft.AspNetCore.Mvc.Rendering
@inject Microsoft.AspNetCore.Mvc.Rendering.IHtmlHelper<dynamic> HtmlHelper

@{
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    string currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    Func<string, string, string> isActive = (controller, action) =>
        (currentController.Equals(controller, StringComparison.OrdinalIgnoreCase) &&
         currentAction.Equals(action, StringComparison.OrdinalIgnoreCase))
         ? "active bg-secondary text-white rounded"
         : "text-white";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoSQL_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NoSQL_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header Nav Bar Mobile -->
    <nav class="navbar navbar-dark bg-dark d-md-none px-2 rounded m-2">
        <div class="container-fluid">
            <a class="navbar-brand mx-auto fw-semibold text-white">The Garden Group</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mobileNav">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>

        <div class="collapse navbar-collapse" id="mobileNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link @(isActive("Home", "Index"))"
                       asp-controller="Home" asp-action="Index">Home</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(isActive("Dashboard", "Index"))"
                       asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link text-white dropdown-toggle" href="#" id="mobileMyTickets"
                       role="button" data-bs-toggle="dropdown">My Tickets</a>
                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="mobileMyTickets">
                        <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                        <li><a class="dropdown-item" asp-controller="Ticket" asp-action="Index">List</a></li>
                        <li><a class="dropdown-item" asp-controller="Ticket" asp-action="Create">Create New</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link text-white dropdown-toggle" href="#" id="mobileEmployees"
                       role="button" data-bs-toggle="dropdown">Employees</a>
                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="mobileEmployees">
                        <li><a class="dropdown-item" asp-controller="Employee" asp-action="Index">List</a></li>
                        <li><a class="dropdown-item" asp-controller="Employee" asp-action="Create">Create New</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Side Nav Desktop -->
    <div class="d-none d-md-flex flex-column flex-shrink-0 p-3 text-white bg-dark m-2 rounded-3" style="width: 280px;">
        <h1 class="fs-4 text-center mb-1">The Garden Group</h1>
        <p class="text-center mb-3">Incident Management System</p>
        <hr class="border-secondary">

        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a class="nav-link @(isActive("Home", "Index"))" asp-controller="Home" asp-action="Index">Home</a>
            </li>

            <li>
                <a class="nav-link @(isActive("Dashboard", "Index"))" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
            </li>

            <li class="nav-item">
                <button class="nav-link text-white collapsed text-start" data-bs-toggle="collapse"
                        data-bs-target="#tickets-collapse">
                    Tickets
                </button>
                <div class="collapse" id="tickets-collapse">
                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ms-4">
                        <li><a class="link-light" asp-controller="Ticket" asp-action="Index">List</a></li>
                        <li><a class="link-light" asp-controller="Ticket" asp-action="Create">Create New</a></li>
                    </ul>
                </div>
            </li>

            <li class="nav-item">
                <button class="nav-link text-white collapsed text-start" data-bs-toggle="collapse"
                        data-bs-target="#employees-collapse">
                    Employees
                </button>
                <div class="collapse" id="employees-collapse">
                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ms-4">
                        <li><a class="link-light" asp-controller="Employee" asp-action="Index">List</a></li>
                        <li><a class="link-light" asp-controller="Employee" asp-action="Create">Create New</a></li>
                    </ul>
                </div>
            </li>
        </ul>

        <hr class="border-secondary">
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
               id="dropdownUser1" data-bs-toggle="dropdown">
                <strong>Phil Smith</strong>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                <li><a class="dropdown-item" href="#">Sign out</a></li>
            </ul>
        </div>
    </div>

    <div class="container p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

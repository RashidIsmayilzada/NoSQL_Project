@using System.Security.Claims
@using NoSQL_Project.Models.Enums
@{
    Layout = null;
}

@functions {
    // Returns "active" when the current route matches the link
    public string IsActive(string controller, string action = null)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

        if (action == null)
            return string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase)
                ? "active bg-primary text-white fw-semibold"
                : "text-white";

        return (string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase)
            && string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase))
            ? "active bg-primary text-white fw-semibold"
            : "text-white";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoSQL_Project</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NoSQL_Project.styles.css" asp-append-version="true" />

    <!-- Load chart libs early so ViewComponents can use them -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body class="bg-light">


    <div class="container-fluid p-0 w-100 m-0">
        <main role="main" class="w-100 fs-5">
            @await Html.PartialAsync("_Alerts")
            @RenderBody()
        </main>
    </div>

    <!-- Scripts at the end -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

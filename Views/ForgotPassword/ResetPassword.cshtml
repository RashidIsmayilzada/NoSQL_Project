@using NoSQL_Project.ViewModels.ForgotPassword
@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_AuthLayout";
}

<div class="min-vh-100 w-100 d-flex flex-column bg-light login-background">

    <!-- Centered reset card -->
    <div class="container flex-column gap-3 flex-grow-1 d-flex align-items-center justify-content-center py-4">
        <div class="w-100" style="max-width: 420px;">
            <div class="card shadow-sm rounded-4 overflow-hidden">

                <div class="card-body p-4">

                    <div class="text-center mb-3">
                        <h2 class="h4 mb-0">Reset your password</h2>
                        <small class="text-muted">Choose a new password for your account</small>
                    </div>

                    <hr />

                    <form asp-action="ResetPassword" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <!-- Hidden fields -->
                        <input type="hidden" asp-for="EmployeeId" />
                        <input type="hidden" asp-for="Token" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3 form-floating">
                            <input asp-for="NewPassword" type="password"
                                   class="form-control" id="NewPassword" placeholder="New password" />
                            <label for="NewPassword">New Password</label>
                            <span asp-validation-for="NewPassword" class="invalid-feedback d-block"></span>
                        </div>

                        <div class="mb-3 form-floating">
                            <input asp-for="ConfirmPassword" type="password"
                                   class="form-control" id="ConfirmPassword" placeholder="Confirm password" />
                            <label for="ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="ConfirmPassword" class="invalid-feedback d-block"></span>
                        </div>

                        <div class="d-grid mb-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check2-circle me-1"></i>
                                Reset password
                            </button>
                        </div>

                        <!-- Back to login -->
                        <div class="text-center">
                            <a asp-controller="Login" asp-action="Login"
                               class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left me-1"></i> Back to Login
                            </a>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center small text-muted">
                    &copy; @DateTime.Now.Year The Garden Group
                </div>

            </div>
        </div>
    </div>
</div>

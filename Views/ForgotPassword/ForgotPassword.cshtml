@using NoSQL_Project.ViewModels.ForgotPassword
@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AuthLayout";
}

<div class="min-vh-100 w-100 d-flex flex-column bg-light login-background">

    <!-- Centered card -->
    <div class="container flex-column gap-3 flex-grow-1 d-flex align-items-center justify-content-center py-4">
        <div class="w-100" style="max-width: 420px;">
            <div class="card shadow-sm rounded-4 overflow-hidden">

                <div class="card-body p-4">

                    <div class="text-center mb-3">
                        <h2 class="h4 mb-0">Forgot your password?</h2>
                        <small class="text-muted">
                            Enter your email and we'll send you a reset link
                        </small>
                    </div>

                    <hr />

                    <form asp-action="ForgotPassword" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3 form-floating">
                            <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="email@example.com" />
                            <label for="Email">Email address</label>
                            <span asp-validation-for="Email" class="invalid-feedback d-block"></span>
                        </div>

                        <div class="d-grid gap-2 mb-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-envelope-paper me-1"></i>
                                Send reset link
                            </button>
                        </div>

                        <!-- Back button -->
                        <div class="text-center">
                            <a asp-controller="Login" asp-action="Login"
                               class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left me-1"></i> Back to Login
                            </a>
                        </div>

                    </form>
                </div>

                <div class="card-footer text-center small text-muted">
                    &copy; @DateTime.Now.Year The Garden Group
                </div>

            </div>
        </div>
    </div>
</div>

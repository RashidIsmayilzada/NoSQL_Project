@model NoSQL_Project.Models.Ticket
@using NoSQL_Project.Models.Enums

@{
    ViewData["Title"] = "Edit Ticket";
}

<h1>Edit Ticket</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <!-- مهم: id را در route بفرست -->
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <!-- نام پارامتر با امضای اکشن یکی باشد -->
            <input type="hidden" name="reportedById" value="@Model.ReportedBy?.Id" />

            @for (int i = 0; i < (Model.HandledBy?.Count ?? 0); i++)
            {
                <input type="hidden" name="HandledBy[@i].EmployeeId" value="@Model.HandledBy[i].EmployeeId" />
                <input type="hidden" name="HandledBy[@i].Date" value="@Model.HandledBy[i].Date" />
            }

            <div class="mb-3">
                <label asp-for="TicketId" class="form-label"></label>
                <input asp-for="TicketId" class="form-control" />
                <span asp-validation-for="TicketId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<TicketType>()">
                    <option value="">-- Select Type --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Priority" class="form-label"></label>
                <select asp-for="Priority" class="form-select" asp-items="Html.GetEnumSelectList<TicketPriority>()">
                    <option value="">-- Select Priority --</option>
                </select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<TicketStatus>()">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <!-- نکتهٔ هماهنگی: چون مدل شما Deadline = string است،
                 برای سازگاری با Create (که "7 days" می‌گذارد)، از select استفاده کنیم -->
            <div class="mb-3">
                <label asp-for="Deadline" class="form-label">Deadline / follow-up</label>
                <select asp-for="Deadline" class="form-select">
                    <option>1 day</option>
                    <option>3 days</option>
                    <option>7 days</option>
                    <option>14 days</option>
                </select>
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

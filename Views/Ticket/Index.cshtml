@using NoSQL_Project.ViewModels.Tickets
@model TicketListVM

@{
    // -------- Page context & dynamic title --------
    // Scope comes from controller: "All" (ServiceDesk) or "My" (default)
    var scope = (string?)ViewBag.Scope ?? "My";
    ViewData["Title"] = scope == "All" ? "All Tickets" : "My Tickets";

    // When we navigated from All(), keep a flag to preserve redirection after "Assign to me"
    var returnToAll = string.Equals(scope, "All", StringComparison.OrdinalIgnoreCase);

    // If this view is used by the Search action, the controller sets ViewBag.Query
    var q = ViewBag.Query as string;
}

<style>
    /* ============= Page-scoped styles (do NOT move to site.css unless reused) ============= */
    .tickets .table thead th {
        white-space: nowrap;
    }

    .tickets .td-deadline,
    .tickets .td-assignee,
    .tickets .td-actions {
        white-space: nowrap;
    }

    /* Enough width for: Details, Edit, Close, Assign dropdown */
    .tickets .td-actions {
        width: 520px;
    }

    .tickets .table td, .tickets .table th {
        vertical-align: middle;
    }

    .dropdown-item.disabled, .dropdown-item:disabled {
        color: #6c757d;
        pointer-events: none;
    }

    /* Toast stack: lightweight notification area (search hint + TempData toasts) */
    .toast-stack {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 1080; /* above navbar/cards */
        display: flex;
        flex-direction: column;
        gap: .5rem;
    }
</style>

<!-- =================== Toasts (Search hint + optional Success/Error) =================== -->
<div class="toast-stack" aria-live="polite" aria-atomic="true">
    @* Search result toast: shown only when ViewBag.Query is present *@
    @if (!string.IsNullOrWhiteSpace(q))
    {
        <div id="toast-search"
             class="toast align-items-center text-bg-light border-0"
             role="alert" aria-live="assertive" aria-atomic="true"
             data-bs-delay="4000">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-search"></i>
                    Results for: <strong>@q</strong>
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }

    @* Success toast surfaced from TempData (e.g., after Assign/Close) *@
    @if (TempData["Success"] is string sMsg && !string.IsNullOrWhiteSpace(sMsg))
    {
        <div id="toast-success"
             class="toast align-items-center text-bg-success border-0"
             role="alert" aria-live="assertive" aria-atomic="true"
             data-bs-delay="3500">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle"></i> @sMsg
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }

    @* Error toast surfaced from TempData *@
    @if (TempData["Error"] is string eMsg && !string.IsNullOrWhiteSpace(eMsg))
    {
        <div id="toast-error"
             class="toast align-items-center text-bg-danger border-0"
             role="alert" aria-live="assertive" aria-atomic="true"
             data-bs-delay="4500">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-exclamation-triangle"></i> @eMsg
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }
</div>

<div class="container-fluid py-3 tickets">
    <!-- =================== Header & Create button =================== -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-semibold mb-0 text-primary">
            <i class="bi bi-ticket-perforated me-2"></i> @ViewData["Title"]
        </h2>

        @* Regular users: outline button; ServiceDesk: solid button *@
        @if (Model.IsServiceDesk)
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-lg me-1"></i> Create New
            </a>
        }
        else
        {
            <a asp-action="Create" class="btn btn-outline-success">
                <i class="bi bi-plus-lg me-1"></i> New Ticket
            </a>
        }
    </div>

    <!-- =================== Search bar (GET /Ticket/Search) =================== -->
    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body">
            <form asp-action="Search" method="get" class="row g-2 align-items-center">
                <!-- Search query with AND/OR/quotes support (parsed in TicketSearchService) -->
                <div class="col-12 col-md-7">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text"
                               name="q"
                               value="@(q ?? "")"
                               class="form-control"
                               placeholder='Search (AND / OR, quotes for "phrases")'>
                    </div>
                </div>

                @* Preserve scope for ServiceDesk so Search can run over "All" when needed *@
                @if (Model.IsServiceDesk)
                {
                    <input type="hidden" name="scope" value="@(returnToAll ? "All" : "My")" />
                }

                <div class="col-6 col-md-auto">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>

                <div class="col-6 col-md-auto">
                    @* Clear returns to Index() or All() depending on current scope *@
                    <a class="btn btn-outline-secondary w-100"
                       asp-action="@(Model.IsServiceDesk ? (returnToAll ? "All" : "Index") : "Index")">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>

                <div class="col-12">
                    <small class="text-muted">
                        Tips: <code>network AND outage</code>, <code>printer OR scanner</code>, <code>"reset password"</code>
                    </small>
                </div>
            </form>
        </div>
    </div>

    <!-- =================== Desktop / Tablet table =================== -->
    <div class="d-none d-md-block">
        <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0 text-break">
                    <thead class="table-primary">
                        <tr>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Deadline</th>
                            @* Assignee column visible only for ServiceDesk *@
                            @if (Model.IsServiceDesk)
                            {
                                <th>Assignee</th>
                            }
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in Model.Items)
                        {
                            <tr>
                                <td>@t.Title</td>
                                <td><span class="badge bg-secondary">@t.Status</span></td>
                                <td><span class="badge bg-info text-dark">@t.Priority</span></td>
                                <td class="td-deadline">@t.Deadline</td>

                                @* Name of assignee (only meaningful for ServiceDesk) *@
                                @if (Model.IsServiceDesk)
                                {
                                    <td class="td-assignee">@(string.IsNullOrWhiteSpace(t.AssigneeName) ? "-" : t.AssigneeName)</td>
                                }

                                <td class="td-actions text-center">
                                    <div class="d-inline-flex align-items-center gap-2">
                                        <!-- Always available: Details / Edit -->
                                        <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@t.Id">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                        <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-route-id="@t.Id">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>

                                        @* ServiceDesk-only actions: Close & Assign *@
                                        @if (Model.IsServiceDesk)
                                        {
                                            <!-- Close (Soft delete): sets Status = Closed -->
                                            <a class="btn btn-outline-warning btn-sm" asp-action="Close" asp-route-id="@t.Id">
                                                <i class="bi bi-lock"></i> Close
                                            </a>

                                            <!-- Assign menu: assign to me / assign to someone -->
                                            <div class="btn-group">
                                                <button type="button"
                                                        class="btn btn-outline-dark btn-sm dropdown-toggle"
                                                        data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="bi bi-people"></i> Assign
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">

                                                    @* Show current assignee if exists *@
                                                    @if (!string.IsNullOrWhiteSpace(t.AssigneeName))
                                                    {
                                                        <li>
                                                            <span class="dropdown-item disabled">
                                                                <i class="bi bi-person-check"></i> Current: @t.AssigneeName
                                                            </span>
                                                        </li>
                                                        <li><hr class="dropdown-divider" /></li>
                                                    }

                                                    @* Assign to me (hidden if already assigned to current user) *@
                                                    @if (!t.IsAssignedToCurrentUser)
                                                    {
                                                        <li>
                                                            <form asp-action="AssignToMe"
                                                                  asp-controller="Ticket"
                                                                  method="post"
                                                                  class="px-2 py-1"
                                                                  asp-route-id="@t.Id"
                                                                  asp-route-returnTo="@(returnToAll ? "All" : null)">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="dropdown-item">
                                                                    <i class="bi bi-person-check"></i> Assign to me
                                                                </button>
                                                            </form>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li>
                                                            <span class="dropdown-item disabled">
                                                                <i class="bi bi-check-circle"></i> Assigned to you
                                                            </span>
                                                        </li>
                                                    }

                                                    @* Assign to someone else (opens selection view) *@
                                                    <li>
                                                        <a class="dropdown-item" asp-action="Assign" asp-route-id="@t.Id">
                                                            <i class="bi bi-person-plus"></i> Assign to someone…
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer: simple count; replace with paging later if needed -->
            <div class="card-footer small text-muted text-end">
                Showing @Model.Items.Count() tickets
            </div>
        </div>
    </div>

    <!-- =================== Mobile cards (compact layout) =================== -->
    <div class="d-md-none mt-3">
        <div class="vstack gap-3">
            @foreach (var t in Model.Items)
            {
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="fw-semibold">@t.Title</div>
                                <div class="small text-muted text-nowrap">
                                    <i class="bi bi-calendar"></i> @t.Deadline
                                </div>
                            </div>
                            <span class="badge bg-secondary">@t.Status</span>
                        </div>

                        <div class="mt-2 d-flex flex-wrap gap-2">
                            <span class="badge bg-info text-dark">
                                <i class="bi bi-flag"></i> @t.Priority
                            </span>

                            @* Assignee badge for ServiceDesk only *@
                            @if (Model.IsServiceDesk && !string.IsNullOrWhiteSpace(t.AssigneeName))
                            {
                                <span class="badge bg-dark-subtle text-dark text-nowrap">
                                    <i class="bi bi-person-check"></i> @t.AssigneeName
                                </span>
                            }
                        </div>

                        <div class="d-flex flex-wrap gap-2 mt-3 align-items-center">
                            <a class="btn btn-outline-primary btn-sm flex-fill" asp-action="Details" asp-route-id="@t.Id">
                                <i class="bi bi-info-circle me-1"></i> Details
                            </a>
                            <a class="btn btn-outline-secondary btn-sm flex-fill" asp-action="Edit" asp-route-id="@t.Id">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </a>

                            @if (Model.IsServiceDesk)
                            {
                                <a class="btn btn-outline-warning btn-sm flex-fill" asp-action="Close" asp-route-id="@t.Id">
                                    <i class="bi bi-lock me-1"></i> Close
                                </a>

                                <div class="dropup flex-fill">
                                    <button type="button"
                                            class="btn btn-outline-dark btn-sm w-100 dropdown-toggle"
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-people"></i> Assign
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        @if (!string.IsNullOrWhiteSpace(t.AssigneeName))
                                        {
                                            <li>
                                                <span class="dropdown-item disabled">
                                                    <i class="bi bi-person-check"></i> Current: @t.AssigneeName
                                                </span>
                                            </li>
                                            <li><hr class="dropdown-divider" /></li>
                                        }

                                        @if (!t.IsAssignedToCurrentUser)
                                        {
                                            <li>
                                                <form asp-action="AssignToMe"
                                                      asp-controller="Ticket"
                                                      method="post"
                                                      class="px-2 py-1"
                                                      asp-route-id="@t.Id"
                                                      asp-route-returnTo="@(returnToAll ? "All" : null)">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="bi bi-person-check"></i> Assign to me
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                <span class="dropdown-item disabled">
                                                    <i class="bi bi-check-circle"></i> Assigned to you
                                                </span>
                                            </li>
                                        }

                                        <li>
                                            <a class="dropdown-item" asp-action="Assign" asp-route-id="@t.Id">
                                                <i class="bi bi-person-plus"></i> Assign to someone…
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-end small text-muted mt-3">
            Showing @Model.Items.Count() tickets
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // =================== Bootstrap toast auto-show ===================
        document.addEventListener("DOMContentLoaded", function () {
            const ids = ["toast-search", "toast-success", "toast-error"];
            ids.forEach(id => {
                const el = document.getElementById(id);
                if (el) new bootstrap.Toast(el).show();
            });
        });
    </script>
}

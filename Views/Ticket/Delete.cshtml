@model NoSQL_Project.Models.Ticket
@{
    ViewData["Title"] = "Delete Ticket";
}

<div class="container py-3">
    <h2 class="fw-semibold text-danger mb-3"><i class="bi bi-trash me-2"></i>Delete Ticket</h2>

    <div class="card border-0 rounded-4 shadow-sm">
        <div class="card-body">
            <div class="alert alert-warning">
                Are you sure you want to delete this ticket?
            </div>

            <dl class="row mb-0">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Priority</dt>
                <dd class="col-sm-9">@Model.Priority</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-check2-circle me-1"></i> Yes, delete
                </button>
                <a asp-action="Index" class="btn btn-light">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

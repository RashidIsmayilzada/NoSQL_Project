@model NoSQL_Project.Models.Ticket

@{
    ViewData["Title"] = "Ticket Details";
}

<h1>Ticket Details</h1>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">@Model.Title</h4>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.TicketId)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.TicketId)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Type)
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Html.DisplayFor(model => model.Type)</span>
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Priority)
                    </dt>
                    <dd class="col-sm-8">
                        @{
                            var priorityBadge = Model.Priority switch
                            {
                                NoSQL_Project.Models.Enums.TicketPriority.Critical => "bg-danger",
                                NoSQL_Project.Models.Enums.TicketPriority.High => "bg-warning text-dark",
                                NoSQL_Project.Models.Enums.TicketPriority.Medium => "bg-primary",
                                NoSQL_Project.Models.Enums.TicketPriority.Low => "bg-secondary",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @priorityBadge">@Html.DisplayFor(model => model.Priority)</span>
                    </dd>
                </dl>
            </div>

            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-8">
                        @{
                            var statusBadge = Model.Status switch
                            {
                                NoSQL_Project.Models.Enums.TicketStatus.Open => "bg-primary",
                                NoSQL_Project.Models.Enums.TicketStatus.InProgress => "bg-info",
                                NoSQL_Project.Models.Enums.TicketStatus.OnHold => "bg-warning text-dark",
                                NoSQL_Project.Models.Enums.TicketStatus.Resolved => "bg-success",
                                NoSQL_Project.Models.Enums.TicketStatus.Closed => "bg-secondary",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @statusBadge">@Html.DisplayFor(model => model.Status)</span>
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Deadline)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Deadline)
                    </dd>

                    <dt class="col-sm-4">
                        Reported By
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.ReportedBy != null && !string.IsNullOrEmpty(Model.ReportedBy.Name?.FirstName))
                        {
                            <span>@Model.ReportedBy.Name.FirstName @Model.ReportedBy.Name.LastName (@Model.ReportedBy.EmployeeId)</span>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <h5>Description</h5>
                <div class="border rounded p-3 bg-light">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p>@Model.Description</p>
                    }
                    else
                    {
                        <p class="text-muted">No description provided.</p>
                    }
                </div>
            </div>
        </div>

        @if (Model.HandledBy != null && Model.HandledBy.Any())
        {
            <div class="row mb-3">
                <div class="col-12">
                    <h5>Handled By</h5>
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Employee ID</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var handler in Model.HandledBy)
                                {
                                    <tr>
                                        <td>@(handler.EmployeeId ?? "N/A")</td>
                                        <td>@handler.Date</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

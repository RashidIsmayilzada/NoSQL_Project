@using NoSQL_Project.ViewModels.Employee
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="min-vh-100 d-flex flex-column bg-light">

    <!-- Centered login card -->
    <div class="container flex-grow-1 d-flex align-items-center justify-content-center py-4">
        <div class="w-100" style="max-width: 420px;">
            <div class="card shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-4">
                    <div class="text-center mb-3">
                        <h2 class="h4 mb-0">Welcome back</h2>
                        <small class="text-muted">Sign in to Incident Management</small>
                    </div>

                    <hr />

                    <form asp-action="Login" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3 form-floating">
                            <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="name@example.com" />
                            <label for="Email">Email address</label>
                            <span asp-validation-for="Email" class="invalid-feedback d-block"></span>
                        </div>

                        <div class="mb-3 form-floating">
                            <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Password" />
                            <label for="Password">Password</label>
                            <span asp-validation-for="Password" class="invalid-feedback d-block"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login
                            </button>
                        </div>

                        <div class="mt-3 text-center">
                            <a asp-action="ForgotPassword" class="small">Forgot password?</a>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center small text-muted">
                    &copy; @DateTime.Now.Year The Garden Group
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
